<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="https://farcaster.xyz/ns/fc/1.0"
           xmlns:fc="https://farcaster.xyz/ns/fc/1.0"
           elementFormDefault="qualified"
           attributeFormDefault="unqualified">

  <xs:annotation>
    <xs:documentation>
      Farcaster RSS Extension (fc:) — XSD 1.0
      Defines required channel-level elements:
        - fc:fname
        - fc:canonical
      Both MUST appear directly under <channel>.
    </xs:documentation>
  </xs:annotation>

  <!-- fc:fname -->
  <xs:element name="fname" type="xs:string">
    <xs:annotation>
      <xs:documentation>
        Publisher’s Farcaster fname (string without '@').
        REQUIRED once per <channel>.
      </xs:documentation>
    </xs:annotation>
  </xs:element>

  <!-- fc:canonical -->
  <xs:element name="canonical" type="xs:anyURI">
    <xs:annotation>
      <xs:documentation>
        Canonical feed URL (absolute URI).
        REQUIRED once per <channel>.
      </xs:documentation>
    </xs:annotation>
  </xs:element>

</xs:schema>
